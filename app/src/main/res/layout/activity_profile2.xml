<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profile2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="#90be6d"
            android:paddingHorizontal="10dp"
            android:layout_height="150dp">
            <TextView
                android:layout_weight="1"
                android:text="profile"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:gravity="start"
                android:textColor="#fff"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_marginTop="20dp"
                android:text="profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:text="profile"
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_marginTop="75dp"
            android:background="@drawable/cricle"
            android:layout_centerHorizontal="true"
            android:elevation="10dp"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/img"></ImageView>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:text="Khoa Ho Duy "
                    android:gravity="center"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Khoa Ho Duy "
                    android:gravity="center"
                    >
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:background="@drawable/activebutton"
                    android:weightSum="2">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="@drawable/buttonsignin"
                        android:elevation="20dp"
                        android:text="Gmail"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/face"
                        android:layout_weight="1"
                        android:text="Facebook"
                        android:textColor="#fff"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginVertical="20dp"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="50dp"
                            android:background="#e9ecef"
                            android:layout_marginRight="20dp"
                            android:layout_height="50dp">
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Header"></TextView>
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:gravity="end"
                                    android:layout_height="wrap_content"
                                    android:text="Header"></TextView>
                            </LinearLayout>
                            <TextView
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="asdasdasd">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"

                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="50dp"
                            android:background="#e9ecef"
                            android:layout_marginBottom="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_height="50dp">
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Header"></TextView>
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:gravity="end"
                                    android:layout_height="wrap_content"
                                    android:text="Header"></TextView>
                            </LinearLayout>
                            <TextView
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="asdasdasd">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="50dp"
                            android:background="#e9ecef"
                            android:layout_marginRight="20dp"
                            android:layout_height="50dp">
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Header"></TextView>
                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="wrap_content"
                                    android:gravity="end"
                                    android:layout_height="wrap_content"
                                    android:text="Header"></TextView>
                            </LinearLayout>
                            <TextView
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="asdasdasd">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="5"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="40dp">
                <LinearLayout
                    android:layout_width="40dp"
                    android:background="#000"
                    android:layout_height="40dp">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="40dp">
                <LinearLayout
                    android:layout_width="40dp"
                    android:background="#000"
                    android:layout_height="40dp">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="40dp">
                <LinearLayout
                    android:layout_width="40dp"
                    android:background="#000"
                    android:layout_height="40dp">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="40dp">
                <LinearLayout
                    android:layout_width="40dp"
                    android:background="#000"
                    android:layout_height="40dp">
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="40dp">
                <LinearLayout
                    android:layout_width="40dp"
                    android:background="#000"
                    android:layout_height="40dp">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
